<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/paypal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:context=".PaypalActivity" />

        <TextView
            android:layout_above="@id/paypal_button"
        android:id="@+id/paypal_support_initiative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_centerHorizontal="true"
        tools:context=".PaypalActivity" />
        
        <EditText 
        android:layout_below="@id/paypal_button"
        android:id="@+id/donation_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="donation amount (USD)"
        android:inputType="numberDecimal"
        tools:context=".PaypalActivity" />

</RelativeLayout>